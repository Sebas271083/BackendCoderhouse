<style>
  .card {
    max-width: 300px; /* Ajusta este valor según tus necesidades */
  }
   .card-body {
    font-size: 14px; /* Ajusta este valor según tus necesidades */
  }
</style>
 <div class="card-deck">
  {{#each products}}
  <div class="card mb-4 shadow-lg">
    <div class="row no-gutters">
      <div class="col-7">
        <div class="card-body">
          <h5 class="card-title mb-3" style="color: #333;">{{title}}</h5>
          <p class="card-text" style="color: #555;">{{description}}</p>
          <p class="card-text" style="color: #555;">Precio: ${{price}}</p>
          <p class="card-text" style="color: #555;">Stock: {{stock}}</p>
        </div>
      </div>
      <div class="col-5 d-flex align-items-center">
        <img src="/uploads/{{img}}" alt="imagen" class="card-img" style="width: 100%; height: auto;">
      </div>
    </div>
    <div class="col-12 mb-3">
      <form id="addToCartForm-{{_id}}" action="/carts" method="POST">
        <input type="hidden" name="productId" value="{{_id}}">
        <button type="submit" class="btn btn-primary w-100 text-center">Comprar</button>
      </form>
    </div>
  </div>
  {{/each}}
</div>