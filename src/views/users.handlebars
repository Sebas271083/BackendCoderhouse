<h1>Lista de Usuarios</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>isAdmin</th>
      <th>Editar</th>
      <th>Eliminar</th>

    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <td>{{first_name}}</td>
      <td>{{last_name}}</td>
      <td>{{email}}</td>
      <td>{{isAdmin}}</td>
      <td>
        <a href="usuarios/actualizar-usuario/{{_id}}" class="btn btn-primary">Editar</a>
      </td>
      <td>
        <form action="/usuarios/delete/{{_id}}?_method=DELETE" method="POST"
          onsubmit="return confirm('¿Estás seguro de eliminar este producto?')">
          <button type="submit" class="btn btn-danger">Eliminar</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>