  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.1.0/css/bootstrap.min.css">

  <h1 class="text-center">Carrito de compras</h1>

  <div class="cart-item">
    <h2 class="p-5">Usuario: {{cartViewUser}}</h2>

    {{#if cartViewProduct}}
    <div class="table-responsive p-5">
      <table class="table table-striped">
        <thead class="table-light">
          <tr>
            <th scope="col">Cantidad</th>
            <th scope="col">Producto</th>
            <th scope="col">Descripción</th>
            <th scope="col">Precio Unitario</th>
            <th scope="col">Código</th>
            <th scope="col">Precio Total</th>
            <th scope="col">Stock</th>
            <th scope="col">Eliminar</th>
          </tr>
        </thead>
        <tbody>
          {{#each cartViewProduct}}
          <tr>
            <td>{{this.quantity}}</td>
            <td>{{this._id.title}}</td>
            <td>{{this._id.description}}</td>
            <td>$ {{this._id.price}}</td>
            <td>{{this._id.code}}</td>
            <td>$ {{multiply this._id.price this.quantity}}</td>
            <td>{{this._id.stock}}</td>
            <td><button class="btn btn-danger delete-product" data-id="{{this._id}}">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                  class="bi bi-x-circle-fill" viewBox="0 0 16 16">
                  <path
                    d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z" />
                </svg>
              </button></td>
              
          </tr>
          {{/each}}
        </tbody>
      </table>
      <form action="/products">
    <div class="text-end  ">
      <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#checkoutModal">Comprar</button>
      <button type="button" class="btn btn-danger">Eliminar Carrito</button>    
    </div>
  </form>
    </div>
    {{else}}
    <p>No hay productos en el carrito</p>
    {{/if}}
  </div>


<!-- Modal -->
<div class="modal fade" id="checkoutModal" tabindex="-1" aria-labelledby="checkoutModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="checkoutModalLabel">Confirmar compra</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>¿Desea confirmar la compra?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <button type="button" class="btn btn-primary">Confirmar</button>
      </div>
    </div>
  </div>
</div>
